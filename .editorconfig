
root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
[*.{c,h,cpp,hpp}]
indent_style = space
indent_size = 2
max_line_length = 80
[README.md]
max_line_length = 80
[CMakeLists.txt]
indent_style = space
indent_size = 4
max_line_length = 80
[*.sh]
indent_style = space
indent_size = 2
[Makefile]
indent_style = tab
